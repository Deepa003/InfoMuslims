<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_duaTab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/dua"/>


    <TextView
        android:id="@+id/tv_duaRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_duaTab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Dua Request"
        android:textSize="18dp"
        android:textColor="@color/title_color"/>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_duaRequest"
        android:layout_marginTop="22dp"
        android:text="Please Submit the form for request a new prayer."
        android:textSize="12dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_submit"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="Name"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/title_color"
        android:textSize="15dp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/toolbar_color"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_name"/>

    <EditText
        android:id="@+id/et_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="Summary"
        android:textColor="@color/title_color"
        android:textSize="15dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="@color/toolbar_color"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/et_summary"/>

    <Button
        android:id="@+id/btn_submmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_cover"/>

    <TextView
        android:id="@+id/tv_submit_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_submmit"
        android:layout_marginTop="8dp"
        android:text="Thank You ! Your Request has been Submitted"
        android:textSize="14dp"
        android:textColor="#000000"
        android:visibility="gone"/>
</RelativeLayout>