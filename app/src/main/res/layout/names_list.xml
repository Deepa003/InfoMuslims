<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:id="@+id/rl_name"
    >

    <TextView
        android:id="@+id/tv_list_names"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/names_img"
        android:gravity="center"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:id="@+id/rl_list"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/tv_list_names"
        android:layout_marginLeft="20dp"
        android:gravity="center|left"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/title_names"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/title_color"
            android:layout_alignParentTop="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/genre_names"
            android:layout_below="@id/title_names"
            android:layout_width="200dp"
            android:layout_height="260dp"
            android:textColor="#000000"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/urdu_names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/title_names"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:gravity="center|left"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
</RelativeLayout>